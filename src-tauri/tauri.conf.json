{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "RAPP Desktop",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": false,
        "scope": [
          { "name": "python", "cmd": "python3", "args": true },
          { "name": "pip", "cmd": "pip3", "args": true },
          { "name": "git", "cmd": "git", "args": true }
        ]
      },
      "dialog": { "all": true },
      "fs": { "all": true, "scope": ["$HOME/.rapp/**", "$DOCUMENT/**", "$DOWNLOAD/**"] },
      "path": { "all": true },
      "process": { "all": true },
      "http": {
        "all": true,
        "scope": [
          "https://raw.githubusercontent.com/**",
          "https://api.github.com/**",
          "https://*.openai.azure.com/**",
          "https://api.openai.com/**"
        ]
      },
      "notification": { "all": true },
      "clipboard": { "all": true },
      "window": { "all": true }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Copyright 2026 RAPP Team",
      "identifier": "com.rapp.desktop",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "longDescription": "RAPP Desktop - Build production-ready AI agents. Browse RAPP Hub implementations, install agents from RAPP Store, deploy to Azure.",
      "shortDescription": "AI Agent Production Pipeline",
      "targets": "all"
    },
    "windows": [{
      "fullscreen": false,
      "height": 800,
      "width": 1200,
      "minWidth": 900,
      "minHeight": 600,
      "resizable": true,
      "title": "RAPP Desktop",
      "center": true
    }]
  }
}
